# Example environment configuration
# Copy this to .env and update with your actual values

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_API_VERSION=2025-04-01-preview
AZURE_OPENAI_API_DEPLOYMENT_NAME=gpt-5-mini
AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME=text-embedding-3-small

# Vector Store Configuration - Pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-west1-gcp-free
PINECONE_INDEX_NAME=hackrx-documents

# Vector Store Configuration - FAISS (Alternative)
USE_FAISS=false
FAISS_INDEX_PATH=./data/faiss_index

# MongoDB Configuration (Optional)
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=hackrx_cache

# Performance Configuration
MAX_CONCURRENT_QUESTIONS=10
REQUEST_TIMEOUT_SECONDS=30
TARGET_RESPONSE_TIME_SECONDS=25

# Logging Configuration  
LOG_LEVEL=INFO

# Cache Configuration
ENABLE_DOCUMENT_CACHE=true
CACHE_TTL_HOURS=24
MAX_CACHE_SIZE_MB=1000
